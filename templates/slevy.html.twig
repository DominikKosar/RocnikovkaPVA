<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <script src="https://code.jquery.com/jquery-3.7.1.slim.js" integrity="sha256-UgvvN8vBkgO0luPSUl2s8TIlOSYRoGFAX4jlCIm9Adc=" crossorigin="anonymous"></script>
        
    </head>
    <body>
        <script src="{{ asset('js/produkty.js') }}" type="text/javascript"></script>
        <div class="navbar hlavniNavbar">
            <nav class="navbar justify-content-end col-6 col-12">
                <ul class="navbar justify-content-end">
                    <div class="navDataLi" onclick="window.location='index' order-4"><li class="nav-item px-4 order-start col-6"><a href="slevy">Slevy</a></li></div>
                    <div class="navDataLi" onclick="window.location='produkty' order-4"><li class="nav-item px-4 order-center"><a href="produkty">Produkty</a></li></div>
                    <div class="navDataLi" onclick="window.location='tabulky' order-4"><li class="nav-item px-4 order-center"><a href="zamestnanci">Zaměstnanci</a></li></div>
                    <div class="navDataLi" onclick="window.location='formular' order-4"><li class="nav-item px-4 order-center"><a href="index">Odhlásit se</a></li></div>
                    <form class="nav-item px-4 order-1">
                        <button class="nav-item px-4 tlacitkoFormulare" type="submit" value="white" name="submit">změna barvy</button>
                    </form>
                <ul>
            </nav>
        </div>
        {% block body %}
            {% block nadpis %}
            {% endblock %}
            {% block contentForm %}
            {% endblock %}
            <div class="container navAkce">
                <nav class="navbar justify-content-end">
                    <form class="px-3">
                        <a href="novaSleva">Nová sleva</a>
                    </form>
                </nav>
                <nav class="navbar justify-content-end">
                    <form class="form">
                        <button class="px-2 m-2 tlacitkoFormulare" type="submit" value="white" name="submit">Smazat slevu</button>
                    </form>
                </nav>
            </div>
        <div >
        <div class="container card-group seznamKaret">
            <div class="ramecek">
                <div class="row mx-4 p-1 align-item-center radka">
                {% for i in Data %}
                    <div class="card p-1 m-2 kartaSlevy">
                        <img src="{{ asset(i.Obrazek) }}" class="card-img-top p-2">
                        <div class="card-body">
                            <h5 class="card-title">{{ i.Nazev }}</h5>
                            <p class="card-text">{{ i.Text }}</p>
                            <p class="card-text">sleva {{ i.Sleva * 100 }}%</p>
                            <p class="card-text">{{ i.Cena - (i.Sleva * i.Cena) }} Kč <input class="form-check-input ms-4" type="checkbox" role="switch" id="flexSwitchCheckDefault"></p>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
        {% endblock %}
    </body>
</html>