{% extends "slevy.html.twig" %}
{% block body %}
    <div class="container formular">
        <a href="slevy">Zpět</a>
        {% block nadpis %}
            <div class="container text-center">
                <p class="nadpis">
                    Nová sleva
                </p>
            </div>
        {% endblock %}
        {% block contentForm %}
            <p class="text-center m-1">
                Produkty:
                <select class="select text-start">
                    {% for i in Data %}
                        <option value="data">{{ i.Nazev }}</option>
                    {% endfor %}
                </select>
            </p>
            <form class="text-center">
                <p class="me-2">Sleva: <input type="number" placeholder="Sleva" min="5" max="99"> %</p><br>
                <button class="px-2 m-2 tlacitkoFormulare" type="submit" value="white" name="submit">Přidat novou slevu</button>
        {% endblock %}
    </div>
{% endblock %}