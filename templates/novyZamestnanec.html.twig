        <div class="container">
            <a href="zamestnanci">Zpět</a>
        </div>
    {% endblock %}
    <div class="container nadpis">
        <div class="container formular">
            <div class="container text-center">
                {% block nadpisForm %}
                    Nový zaměstnanec
                {% endblock %}
            </div>
            <form class="form">
                {% block contentForm %}
                    <div class="container text-center">
                        <input type="text" placeholder="Jméno" class="m-1"><br>
                        <input type="text" placeholder="Příjmení" class="m-1"><br>
